{
  "expo": {
    "name": "NossoPoint",
    "slug": "testando-api",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.gbiondinova.nossopoint",
      "autoIncrement": true,
      "supportsTablet": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPushNotificationUsageDescription": "Este aplicativo usará notificações para alertar o usuário quando um novo pedido for enviado.",
        "UIBackgroundModes": ["remote-notification"]
      }
    },  
    "android": {
      "package": "com.gbiondinova.nossopoint",
      "googleServicesFile": "./android/app/google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "useNextNotificationsApi": true
    },
    "plugins": ["expo-notifications"],
    "extra": {
      "eas": {
        "projectId": "7e480f65-cc6b-476f-b57d-270e50206802"
      }
    },
    "owner": "gbiondinova"
  }
}
